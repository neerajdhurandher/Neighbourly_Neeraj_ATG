<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="8dp"
    tools:context=".Fragments.Show_Post_Details_Fragment">

    <Button
        android:id="@+id/type_answer_btn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:drawableLeft="@drawable/answer_icon_white"
        android:text="Answer"
        android:backgroundTint="@color/orange"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?actionBarSize"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#C8FA4242"
                android:padding="-16dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cancel_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:rotation="45"
                app:civ_circle_background_color="#5E5C5C"
                android:src="@drawable/add_plus_icon"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.082"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.053" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/three_dot_no_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_3_three_dot"
                android:visibility="invisible"
                app:civ_circle_background_color="#fff"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.957"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.053"


                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/three_dot_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_3_three_dot_white"
                android:visibility="visible"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="#5E5C5C"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.957"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.053"

                />

            <RelativeLayout
                android:id="@+id/basic_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="8dp"
                android:background="#fff"
                android:paddingBottom="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <LinearLayout
                    android:id="@+id/postedUserDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_Image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/train_scene"
                        app:civ_border_color="#000000"
                        app:civ_border_width="2dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/abc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/username_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="Neeraj Dhurandher"
                                android:textColor="#000"
                                android:textSize="20sp" />


                            <TextView
                                android:id="@+id/time_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 3 hours ago"
                                android:textColor="#000" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/location_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableStart="@drawable/location_icon"
                            android:text="location"
                            android:textColor="#000"

                            />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/content_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Hey I am Neeraj Dhurandher , looking for internships."
                android:textColor="@color/design_default_color_primary"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/basic_info_layout" />


            <RelativeLayout
                android:id="@+id/like_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_show"
                app:layout_constraintVertical_bias="0.0"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/like_commentShowid"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="1 Like"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/comment_Count_Id"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="3"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="3 Answer"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="#706D6D" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingStart="-4dp"
                        android:paddingEnd="-4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <Button
                            android:id="@+id/save_btn"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/save_icon"
                            android:text="@string/save"
                            android:textColor="#6C6A6A"
                            app:backgroundTint="#FFFFFF" />

                        <Button
                            android:id="@+id/like_btn"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/like_icon"
                            android:text="Like"
                            android:textColor="#6C6A6A"
                            app:backgroundTint="#FFFFFF" />

                        <Button
                            android:id="@+id/answer_btn"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/answer_icon"
                            android:text="Answer"
                            android:textColor="#6C6A6A"
                            app:backgroundTint="#FFFFFF" />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#989898"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/like_comment_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/type_answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/orange"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_type_answer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/train_scene"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            >
            <EditText
                android:id="@+id/answer_text"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:hint="Enter Here"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/show_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:text="Munnekollal"
                android:textColor="#CCC2C2"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/location_icon"
                />

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/voice_rec_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/mic_icon"
                app:civ_border_color="#FFFFFF"
                app:civ_circle_background_color="#fff"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/answer_send_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/send_icon_orange"
                app:civ_border_color="#FFFFFF"
                app:civ_circle_background_color="#fff"
                app:civ_border_width="2dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>