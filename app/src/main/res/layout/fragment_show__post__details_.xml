<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="8dp"
    android:id="@+id/Post_Details_CardView_Layout"
    tools:context=".Fragments.Show_Post_Details_Fragment">

    <Button
        android:id="@+id/type_answer_btn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:drawableLeft="@drawable/answer_icon_white"
        android:text="Comment"
        android:backgroundTint="@color/orange"
        android:layout_gravity="bottom"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/post_details_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?actionBarSize"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/post_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/full_constraint_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/image_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/bg1"
                 />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/show_post_cancel_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:rotation="45"
                app:civ_circle_background_color="#5E5C5C"
                android:src="@drawable/add_plus_icon"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.082"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.053" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/three_dot_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_3_three_dot_white"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="#5E5C5C"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.957"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.053"

                />

            <RelativeLayout
                android:id="@+id/basic_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_relative_layout">

                <LinearLayout
                    android:id="@+id/postedUserDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_Image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/train_scene"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/abc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/username_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:text="Neeraj Dhurandher"
                                android:textColor="#000"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/time_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 3 hours ago"
                                android:textSize="12sp"
                                android:textColor="@color/grey_text" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/location_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Chhattisgarh"
                            android:textSize="12sp"
                            android:textColor="@color/grey_text"
                            app:drawableStartCompat="@drawable/location_icon" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/content_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:text="Hey I am Neeraj Dhurandher , looking for internships."
                android:textColor="@color/design_default_color_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/basic_info_layout" />

            <RelativeLayout
