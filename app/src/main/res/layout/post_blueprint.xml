<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/post_bg_corner">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#C8FA4242"
        android:visibility="visible"
        android:padding="-16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
            android:id="@+id/first_answer_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingBottom="16dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_show">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/first_answer_user_Image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/user_icon"
                    app:civ_border_color="#000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/first_answer_username_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Neeraj"
                            android:textColor="@color/grey_text"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/first_answer_time_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 3 hours ago"
                            android:textColor="@color/grey_text"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/first_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:background="#2DB36B"
                            android:padding="4dp"
                            android:text="@string/first_answer"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/first_answer_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="This is First answer content which is shown at the feed section"
                        android:textColor="@color/design_default_color_primary"
                        android:textSize="19dp" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/three_dot_no_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_3_three_dot"
        app:civ_circle_background_color="#fff"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"


        />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/three_dot_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000"
            app:civ_circle_background_color="#5E5C5C"
            android:src="@drawable/ic_3_three_dot_white"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/basic_info_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053"

            />

    <RelativeLayout
        android:id="@+id/basic_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#fff"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:id="@+id/postedUserDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_Image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#000000"
                android:src="@drawable/train_scene" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/abc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/username_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Neeraj Dhurandher"
                        android:textColor="#000"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/time_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 3 hours ago"
                        android:textColor="#000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/location_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawableStart="@drawable/location_icon"
                    android:text="location"
                    android:textColor="#000"

                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/content_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hey I am Neeraj Dhurandher , looking for internships."
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basic_info_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_answer_info_layout"
        app:layout_constraintVertical_bias="0.0"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like_commentShowid"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:text="1 Like"
                android:textAlignment="textEnd"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/comment_Count_Id"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:text="3 Answer"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                android:layout_weight="3"/>

        </LinearLayout>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:layout_marginStart="16dp"
             android:layout_marginEnd="16dp"
             android:background="#706D6D"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="0dp"
            android:paddingStart="-4dp"
            android:paddingEnd="-4dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/save_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/save_icon"
                android:text="@string/save"
                android:textColor="#6C6A6A"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/like_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/like_icon"
                android:text="Like"
                android:textColor="#6C6A6A"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/answer_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/answer_icon"
                android:text="Answer"
                android:textColor="#6C6A6A"
                app:backgroundTint="#FFFFFF" />



        </LinearLayout>

        </LinearLayout>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>